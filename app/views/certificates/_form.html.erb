<%= simple_form_for certificate do |f| %>
  <div class="row">
    <div class="col-lg-6">
      <h2>Le diplôme</h2>
      <%= f.input :name, as: :string %>
      <%= f.input :diplom_kind %>
      <%= f.input :diplom_mention %>
      <%= f.input :diplom_path %>
      <%= f.input :diplom_date, html5: true %>
      <%= f.input :quality %>
      <%= f.input :ects %>
      <%= f.input :year %>
    </div>
    <div class="col-lg-6">
      <h2>La personne</h2>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :birth_date, html5: true %>
      <%= f.input :birth_place %>
      <%= f.input :ine %>
    </div>
  </div>
  <%= f.submit 'Créer', class: 'btn btn-primary' %>
<% end %>
